<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Lvl4Fragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lvl4_test" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_to_book_babel"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:background="@drawable/button_outline" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_to_book_askii"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="-100dp"
        android:background="@drawable/button_outline" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_to_book_qr"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="-200dp"
        android:background="@drawable/button_outline" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_to_book_blur"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_outline" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_to_book_history"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_outline" />




</FrameLayout>