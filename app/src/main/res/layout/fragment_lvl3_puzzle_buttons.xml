<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_screen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/lvl3_puzzle1_lock" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH_row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.48" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH_row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.698" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV_column1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.348" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV_column2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV_column3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.553" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/lvl3_puzzle1_button_off"
            android:text="1"
            android:textSize="0sp"
            app:layout_constraintHeight_percent="0.17"
            app:layout_constraintStart_toStartOf="@id/guideV_column1"
            app:layout_constraintTop_toTopOf="@id/guideH_row1"
            app:layout_constraintWidth_percent="0.096" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/lvl3_puzzle1_button_off"
            android:text="2"
            android:textSize="0sp"
            app:layout_constraintHeight_percent="0.17"
            app:layout_constraintStart_toStartOf="@id/guideV_column2"
            app:layout_constraintTop_toTopOf="@id/guideH_row1"
            app:layout_constraintWidth_percent="0.096" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/lvl3_puzzle1_button_off"
            android:text="3"
            android:textSize="0sp"
            app:layout_constraintHeight_percent="0.17"
            app:layout_constraintStart_toStartOf="@id/guideV_column3"
            app:layout_constraintTop_toTopOf="@id/guideH_row1"
            app:layout_constraintWidth_percent="0.096" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/lvl3_puzzle1_button_off"
            android:text="4"
            android:textSize="0sp"
            app:layout_constraintHeight_percent="0.17"
            app:layout_constraintStart_toStartOf="@id/guideV_column1"
            app:layout_constraintTop_toTopOf="@id/guideH_row2"
            app:layout_constraintWidth_percent="0.096" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/lvl3_puzzle1_button_off"
            android:text="5"
            android:textSize="0sp"
            app:layout_constraintHeight_percent="0.17"
            app:layout_constraintStart_toStartOf="@id/guideV_column2"
            app:layout_constraintTop_toTopOf="@id/guideH_row2"
            app:layout_constraintWidth_percent="0.096" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/lvl3_puzzle1_button_off"
            android:text="6"
            android:textSize="0sp"
            app:layout_constraintHeight_percent="0.17"
            app:layout_constraintStart_toStartOf="@id/guideV_column3"
            app:layout_constraintTop_toTopOf="@id/guideH_row2"
            app:layout_constraintWidth_percent="0.096" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>