<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".fragments.Lvl3PuzzleEditorFragment">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/lvl3_warning" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV_paste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH_paste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.605" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_paste"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="@id/guideV_paste"
            app:layout_constraintTop_toTopOf="@id/guideH_paste"
            app:layout_constraintWidth_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV_first_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.736" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH_first_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.205" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_first_layer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintStart_toStartOf="@id/guideV_first_layer"
            app:layout_constraintTop_toTopOf="@id/guideH_first_layer"
            app:layout_constraintWidth_percent="0.23" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH_second_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_second_layer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintStart_toStartOf="@id/guideV_first_layer"
            app:layout_constraintTop_toTopOf="@id/guideH_second_layer"
            app:layout_constraintWidth_percent="0.23" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>