<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_screen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Lvl3PuzzleHooverFragment">

  <ImageView
      android:id="@+id/iw_monitor_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/hoover_map_test"/>

    <TextView
        android:id="@+id/tv_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="150dp"
        tools:text="Въебался в стену!"
        android:textColor="#6B0101"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="650dp"
        android:layout_marginTop="50dp"
        android:textColor="#06EB3F"
        android:textSize="25sp"
        tools:text="Победил!" />

    <TextView
        android:id="@+id/tv_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(X,Y)"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_gravity="center|end"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="40dp"/>

    <TextView
        android:id="@+id/tv_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="direction"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_gravity="center|end"
        android:layout_marginEnd="50dp"/>

    <Button
        android:id="@+id/btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вправо"
        android:layout_gravity="center"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="160dp"/>

    <Button
        android:id="@+id/btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Влево"
        android:layout_gravity="center"
        android:layout_marginRight="270dp"
        android:layout_marginTop="160dp"/>

    <Button
        android:id="@+id/btn_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Вперёд"
        android:textColor="#0C8102"
        android:layout_marginLeft="-170dp"
        android:layout_marginTop="160dp"/>


</FrameLayout>